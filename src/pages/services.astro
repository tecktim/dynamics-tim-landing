---
import BaseLayout from '../layouts/BaseLayout.astro';
import ServicesGrid from '../components/ServicesGrid.astro';

const services = [
  {
    title: 'Dynamics 365 Prozess- & App-Design',
    description:
      'Workshops, User Journeys sowie modellgetriebene Apps, Canvas Apps und Custom Pages, die Cases schneller durch den Service-Prozess bringen.'
  },
  {
    title: 'Power Platform Automation & Plugins',
    description:
      'C# Plugins, Power Automate Flows, PCF Controls und Dataverse-Logik für saubere Automatisierung und erweiterte Business-Regeln.'
  },
  {
    title: 'UI Test Automation & Quality Gates',
    description:
      'Playwright-basierte Test-Frameworks für Business-kritische CRM-Workflows mit robusten Retry-Strategien und Quality Gates für sichere Deployments.'
  },
  {
    title: 'DevOps, Qualität & Enablement',
    description:
      'CI/CD, ALM, Code-Quality-Gates und Team-Coaching sorgen für nachhaltige Delivery und dokumentierte Übergaben.'
  }
];

const formats = [
  {
    title: 'Freelance Delivery',
    description: 'Hands-on Dynamics Engineer, der sich ins Team einbettet, Sprints liefert und Wissen dokumentiert übergibt.'
  },
  {
    title: 'Solution Sprint',
    description: 'Zwei Wochen Fokus: Prozessanalyse, Architektur-Blueprint, Prototyping und priorisierte Maßnahmen für schnelle Resultate.'
  },
  {
    title: 'Review & Coaching',
    description: 'Health Check für bestehende Lösungen inklusive Code-Reviews, Pairing Sessions und Enablement der internen Entwickler:innen.'
  }
];
---

<BaseLayout title="Leistungen" description="Dynamics 365 Leistungen für Prozessdesign, Power Platform Engineering, Azure Integrationen und DevOps Enablement.">
  <section class="bg-surface-100 py-20">
    <div class="mx-auto max-w-5xl px-6 text-center">
      <h1 class="section-title">Leistungen im Überblick</h1>
      <p class="mt-6 text-lg text-slate-600">
        Jede Zusammenarbeit startet mit einem messbaren Business Case und endet mit einer übergebbaren Lösung. Ich arbeite embedded im Team oder übernehme die Deliver Lead Rolle – transparent, iterativ und mit Fokus auf nachhaltige Ergebnisse.
      </p>
    </div>
  </section>

  <ServicesGrid
    heading="Kernkompetenzen"
    subheading="Strategie, Umsetzung und Betrieb – abgestimmt auf Dynamics 365 Sales & Service."
    items={services}
  />

  <section class="bg-gradient-to-br from-brand-900 via-brand-800 to-accent-600 py-20 text-white">
    <div class="mx-auto max-w-6xl px-6">
      <h2 class="section-title text-white">Zusammenarbeitsmodelle</h2>
      <div class="mt-10 grid gap-6 md:grid-cols-3">
        {formats.map((format) => (
          <div class="card card--on-dark text-left" key={format.title}>
            <h3 class="text-xl font-semibold text-white">{format.title}</h3>
            <p class="mt-3 text-sm text-slate-200">{format.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-surface-50 py-20">
    <div class="mx-auto max-w-5xl px-6 text-center">
      <h2 class="text-3xl font-semibold text-slate-900 sm:text-4xl">Lass uns sprechen</h2>
      <p class="mt-4 text-lg text-slate-600">
        Schicke mir deine Anforderungen oder buche direkt einen Termin. Ich melde mich innerhalb von 48 Stunden mit konkreten Vorschlägen zum Vorgehen.
      </p>
      <a
        href="mailto:hello@dynamics-tim.dev"
        class="mt-8 inline-flex items-center rounded-2xl bg-brand-500 px-6 py-3 text-base font-semibold text-white shadow-soft transition hover:bg-brand-400 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-brand-200"
      >
        Kostenloses Erstgespräch vereinbaren
      </a>
    </div>
  </section>
</BaseLayout>



