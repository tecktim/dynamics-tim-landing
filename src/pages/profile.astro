---
import BaseLayout from '../layouts/BaseLayout.astro';
import Timeline from '../components/Timeline.astro';
import ProjectCards from '../components/ProjectCards.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL ?? '/';

const timeline = (await getCollection('timeline')).sort((a, b) => b.data.startDate.localeCompare(a.data.startDate));
const projects = (await getCollection('projects')).sort((a, b) => (a.data.featured === b.data.featured ? 0 : a.data.featured ? -1 : 1));
const certs = (await getCollection('certs')).sort((a, b) => b.data.issued.localeCompare(a.data.issued));
---

<BaseLayout
  title="Profil"
  description="Profil von Tim Friedrich: Dynamics 365 Freelancer für Power Platform Engineering, Azure Integrationen & DevOps Enablement."
  breadcrumbs={[
    { name: 'Startseite', url: '/' },
    { name: 'Profil', url: '/profile' }
  ]}
  ogImage={`${base}images/tim-portrait.jpg`}
>
  <section class="bg-gradient-to-br from-brand-900 via-brand-800 to-accent-700 py-16 text-white">
    <div class="mx-auto max-w-5xl px-6">
      <div class="flex flex-col items-center gap-8 text-center lg:flex-row lg:text-left lg:gap-12">
        <div class="relative" data-reveal data-reveal-delay="0">
          <div class="absolute -inset-2 rounded-full bg-gradient-to-br from-signal-400 via-accent-300 to-signal-500 opacity-60 blur-xl"></div>
          <img 
            src={`${base}images/tim-portrait.jpg`}
            alt="Tim Friedrich - Dynamics 365 Developer & Technical Consultant"
            class="relative h-48 w-48 rounded-full object-cover ring-4 ring-white/30 shadow-2xl lg:h-56 lg:w-56"
            width="224"
            height="224"
            loading="eager"
          />
        </div>
        <div class="flex-1 space-y-4" data-reveal data-reveal-delay="80">
          <h1 class="font-heading text-4xl font-bold text-white lg:text-5xl">Tim Friedrich</h1>
          <p class="text-xl font-semibold text-signal-300">
            Dynamics 365 Developer & Technical Consultant
          </p>
          <p class="max-w-2xl text-lg text-white/90">
            Mit 4+ Jahren Erfahrung verstärke ich Dynamics 365 Teams als Professional/Senior Developer und Technical Consultant. Mein Fokus liegt auf Plugin-Entwicklung, Scripting, CI/CD Optimization, Requirements Engineering und Wissenstransfer.
          </p>
          <div class="flex flex-wrap justify-center lg:justify-start gap-3 pt-2">
            <a 
              href="mailto:hello@dynamics-tim.dev" 
              class="inline-flex items-center gap-2 rounded-xl bg-white/10 px-4 py-2 text-sm font-semibold text-white backdrop-blur-sm transition hover:bg-white/20 border border-white/20"
            >
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              hello@dynamics-tim.dev
            </a>
            <a 
              href="https://www.linkedin.com/in/tim-friedrich-dynamics365/" 
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 rounded-xl bg-white/10 px-4 py-2 text-sm font-semibold text-white backdrop-blur-sm transition hover:bg-white/20 border border-white/20"
            >
              <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              LinkedIn
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-surface-100 py-20">
    <div class="mx-auto max-w-5xl px-6">
      <h2 class="section-title" data-reveal data-reveal-delay="0">Expertise & Schwerpunkte</h2>
      <div class="mt-10 grid gap-6 md:grid-cols-2">
        <div class="group relative overflow-hidden rounded-2xl border border-brand-100 bg-white p-6 shadow-soft transition-all duration-300 hover:shadow-[0_20px_60px_rgba(77,162,242,0.15)] hover:-translate-y-1" data-reveal data-reveal-delay="80">
          <div class="absolute -right-8 -top-8 h-32 w-32 rounded-full bg-gradient-to-br from-brand-100 to-accent-100 opacity-0 blur-2xl transition-opacity duration-300 group-hover:opacity-100"></div>
          <div class="relative">
            <div class="mb-4 flex items-center gap-3">
              <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-gradient-to-br from-brand-500 to-brand-600 shadow-lg">
                <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-slate-900">Aktuelle Schwerpunkte</h3>
            </div>
            <ul class="space-y-3 text-sm text-slate-600">
              <li class="flex items-start gap-3 rounded-lg p-2 transition hover:bg-brand-50/50">
                <span class="mt-0.5 flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-brand-100 text-brand-600">
                  <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 0 1 0 1.414l-7.25 7.25a1 1 0 0 1-1.414 0l-3.5-3.5a1 1 0 1 1 1.414-1.414l2.793 2.793 6.543-6.543a1 1 0 0 1 1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </span>
                <span><strong class="text-slate-900">Plugin Development:</strong> C# Plugins für Dataverse mit Best Practices und Performance-Optimierung</span>
              </li>
              <li class="flex items-start gap-3 rounded-lg p-2 transition hover:bg-brand-50/50">
                <span class="mt-0.5 flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-brand-100 text-brand-600">
                  <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 0 1 0 1.414l-7.25 7.25a1 1 0 0 1-1.414 0l-3.5-3.5a1 1 0 1 1 1.414-1.414l2.793 2.793 6.543-6.543a1 1 0 0 1 1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </span>
                <span><strong class="text-slate-900">Script Development:</strong> Verwendung von TypeScript um PCFs und Formular-Logik anzupassen</span>
              </li>
              <li class="flex items-start gap-3 rounded-lg p-2 transition hover:bg-brand-50/50">
                <span class="mt-0.5 flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-brand-100 text-brand-600">
                  <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 0 1 0 1.414l-7.25 7.25a1 1 0 0 1-1.414 0l-3.5-3.5a1 1 0 1 1 1.414-1.414l2.793 2.793 6.543-6.543a1 1 0 0 1 1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </span>
                <span><strong class="text-slate-900">CI/CD Optimization:</strong> Azure DevOps Pipelines, Quality Gates und Deployment-Automatisierung</span>
              </li>
              <li class="flex items-start gap-3 rounded-lg p-2 transition hover:bg-brand-50/50">
                <span class="mt-0.5 flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-brand-100 text-brand-600">
                  <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 0 1 0 1.414l-7.25 7.25a1 1 0 0 1-1.414 0l-3.5-3.5a1 1 0 1 1 1.414-1.414l2.793 2.793 6.543-6.543a1 1 0 0 1 1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </span>
                <span><strong class="text-slate-900">Technical Consulting:</strong> Requirements Engineering, User Stories und Prozessanalyse für Dynamics 365</span>
              </li>
              <li class="flex items-start gap-3 rounded-lg p-2 transition hover:bg-brand-50/50">
                <span class="mt-0.5 flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-brand-100 text-brand-600">
                  <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 0 1 0 1.414l-7.25 7.25a1 1 0 0 1-1.414 0l-3.5-3.5a1 1 0 1 1 1.414-1.414l2.793 2.793 6.543-6.543a1 1 0 0 1 1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </span>
                <span><strong class="text-slate-900">Configuration & Customization:</strong> Anpassung und Konfiguration von Dynamics 365 Komponenten</span>
              </li>
            </ul>
          </div>
        </div>
        <div class="group relative overflow-hidden rounded-2xl border border-accent-100 bg-white p-6 shadow-soft transition-all duration-300 hover:shadow-[0_20px_60px_rgba(28,186,205,0.15)] hover:-translate-y-1" data-reveal data-reveal-delay="160">
          <div class="absolute -right-8 -top-8 h-32 w-32 rounded-full bg-gradient-to-br from-accent-100 to-signal-100 opacity-0 blur-2xl transition-opacity duration-300 group-hover:opacity-100"></div>
          <div class="relative">
            <div class="mb-4 flex items-center gap-3">
              <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-gradient-to-br from-accent-500 to-accent-600 shadow-lg">
                <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-slate-900">Jüngste Projekthighlights</h3>
            </div>
            <ul class="space-y-3 text-sm text-slate-600">
              <li class="flex items-start gap-3 rounded-lg p-2 transition hover:bg-accent-50/50">
                <span class="mt-0.5 flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-accent-100 text-accent-600">
                  <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                </span>
                <span><strong class="text-slate-900">Generischer Import:</strong> Komplettlösung für Massenimport von Daten in Dynamics 365</span>
              </li>
              <li class="flex items-start gap-3 rounded-lg p-2 transition hover:bg-accent-50/50">
                <span class="mt-0.5 flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-accent-100 text-accent-600">
                  <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                </span>
                <span><strong class="text-slate-900">Code Quality & Security:</strong> Automatisierte Qualitäts- und Security-Gates in Azure DevOps</span>
              </li>
              <li class="flex items-start gap-3 rounded-lg p-2 transition hover:bg-accent-50/50">
                <span class="mt-0.5 flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-accent-100 text-accent-600">
                  <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                </span>
                <span><strong class="text-slate-900">CRM PCF Komponenten:</strong> Benutzerzentrierte Controls für Dynamics 365 Service in React & TypeScript</span>
              </li>
              <li class="flex items-start gap-3 rounded-lg p-2 transition hover:bg-accent-50/50">
                <span class="mt-0.5 flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-accent-100 text-accent-600">
                  <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                </span>
                <span><strong class="text-slate-900">Azure Integration:</strong> Serverless Datenflüsse, Service Bus Routing und Observability</span>
              </li>
              <li class="flex items-start gap-3 rounded-lg p-2 transition hover:bg-accent-50/50">
                <span class="mt-0.5 flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-accent-100 text-accent-600">
                  <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                </span>
                <span><strong class="text-slate-900">DevOps Automation:</strong> Vollautomatische Release-Orchestrierung mit Monitoring und Backup</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Timeline items={timeline} />

  <ProjectCards items={projects} />

  <section class="bg-gradient-to-br from-brand-900 via-brand-800 to-accent-600 py-20 text-white">
    <div class="mx-auto max-w-6xl px-6">
      <h2 class="section-title text-white">Zertifizierungen</h2>
      <div class="mt-10 grid gap-6 md:grid-cols-3">
        {certs.map((cert) => (
          <article class="card card--on-dark card--compact flex flex-col gap-4 text-left">
            <h3 class="text-xl font-semibold text-white">{cert.data.title}</h3>
            <p class="mt-2 text-sm text-slate-200">{cert.data.issuer} · {cert.data.issued}</p>
            <div class="mt-4 text-sm text-slate-200">
              {cert.data.skills.map((skill) => (
                <span class="mr-2 inline-flex items-center rounded-full bg-white/10 px-3 py-1 text-xs font-semibold">
                  {skill}
                </span>
              ))}
            </div>
            {cert.data.credentialUrl && (
              <a href={cert.data.credentialUrl} class="mt-4 inline-flex text-xs font-semibold text-accent-200 hover:text-white">
                Zertifikat ansehen ->
              </a>
            )}
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>



