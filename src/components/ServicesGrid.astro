---
interface ServiceItem {
  title: string;
  description: string;
  cta?: string;
  href?: string;
}

interface Props {
  heading?: string;
  subheading?: string;
  items: ServiceItem[];
}

const { heading = 'Leistungen', subheading, items } = Astro.props as Props;
---

<section class="bg-white py-20">
  <div class="mx-auto max-w-6xl px-6">
    <div class="mb-10 max-w-3xl space-y-4">
      <h2 class="section-title">{heading}</h2>
      {subheading && <p class="text-lg text-slate-600">{subheading}</p>}
    </div>
    <div class="grid gap-6 md:grid-cols-2">
      {items.map((service) => (
        <article class="card flex flex-col gap-4">
          <h3 class="text-2xl font-semibold text-slate-900">{service.title}</h3>
          <p class="text-base text-slate-600">{service.description}</p>
          {service.href && (
            <a href={service.href} class="mt-auto inline-flex items-center text-sm font-semibold text-brand-600 hover:text-brand-500">
              {service.cta ?? 'Mehr erfahren'} â†’
            </a>
          )}
        </article>
      ))}
    </div>
  </div>
</section>
